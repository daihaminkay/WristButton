<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container_ambidex"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.sensor.magic.sensortest.AmbidexActivity"
    tools:deviceIds="wear"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/lefty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/lefty"
            android:onClick="checkLefty"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/righty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/righty"
            android:onClick="checkRighty"
            android:layout_weight="1"/>
    </LinearLayout>


</ScrollView>